{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Start Backend Spring",
            "type": "shell",
            "command": "mvn",
            "args": [
                "spring-boot:run"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\ed-demo"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        },
        {
            "label": "Start Frontend Angular",
            "type": "shell",
            "command": "ng",
            "args": [
                "serve"
            ],
            "options": {
                "cwd": "${workspaceFolder}\\ed-frontend"
            },
            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}